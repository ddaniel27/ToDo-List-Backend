<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">
    <% for (let i=0; i<newListItems.length; i++) { %>
      <form id="myCheckForm" action="/delete" method="POST">
        <div class="item">
          <input type="checkbox" name="checkbox" value=<%=  newListItems[i]._id  %> onchange="this.form.submit()">
          <input type="text" name="checkbox2" value="<%= senderPage %>" hidden>
          <p><%=  newListItems[i].name  %></p>
        </div>
      </form>
      <% } %>

      <form class="item" action="/<%= senderPage %>" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button type="submit" name="list" value=<%= senderPage %>>+</button>
      </form>
  </div>

<%- include("footer") -%>
